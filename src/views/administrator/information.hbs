<div class="container p-4">
    <div class="row">

        <div class="col-md-7">
            <div class="thumbnail row">
                <table class="table caption-top">
                    <caption>Lista de Unidades de Medida</caption>
                    <thead class="text-center table-secondary">
                        <tr class="card-title text-uppercase">
                            <td>N°</td>
                            <td>Descripcion</td>
                            <td>Imagen</td>
                            <td>Eliminar</td>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each information}}
                        <tr>
                            <td>{{INFORMACION_ID}}</td>
                            <td>{{INFORMACION_DESCRIPCION}}</td>
                            <td>
                                <a href="{{INFORMACION_URL}}" target="_blank">
                                    <img class="card-img-top" src="{{INFORMACION_URL}}" width="90px" height="150px">
                                </a>
                            </td>
                            <td>
                                <a href="/administrator/information/{{INFORMACION_ID}}"
                                    class="btn btn-danger">Eliminar</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-dark mb-3">
                <div class="card-header text-center card-title">
                    <h5>Agregar Información</h5>
                </div>
                <div class="card-body text-dark">
                    <form action="/administrator/information" method="POST" class="row g-3 needs-validation"
                        enctype="multipart/form-data">
                        <p>
                            <label class="form-label">Descripción:</label>
                            <textarea name="INFORMACION_DESCRIPCION" rows="2" class="form-control"
                                placeholder="Descripción" required></textarea>
                        </p>
                        <p>
                            <input type="file" accept="image/*" name="SUBIR_IMAGEN" class="form-control"
                                onchange="loadFile(event)">
                            <font size=2 class="text-danger">Solo subir imagenes</font>
                        <div class="mb-3 text-center">
                            <img id="output" class="img-thumbnail" width="300px" />
                        </div>
                        </p>

                        <div class="text-center">
                            <button class="btn btn-success">Agregar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="thumbnail row text-center" style="min-height:260px;">
                <div class="panel panel-default">
                    <div class="panel-heading text-center">
                        <h3 class="panel-title">Acciones</h3>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="d-grid gap-3">
                        <a href="/administrator/users" class="btn btn-outline-success">
                            <i class="fal fa-user"> Usuarios</i>
                        </a>
                        <a href="/administrator/presentation" class="btn btn-outline-primary">
                            <i class="fal fa-sack"> Presentación</i>
                        </a>
                        <a href="/administrator/measurements" class="btn btn-outline-secondary">
                            <i class="far fa-ruler"> Unidad de Medida</i>
                        </a>
                        <a href="/administrator/category" class="btn btn-outline-warning">
                            <i class="fal fa-list"> Categoria</i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    var loadFile = function (event) {
        var reader = new FileReader();
        reader.onload = function () {
            var output = document.getElementById('output');
            output.src = reader.result;
        };
        reader.readAsDataURL(event.target.files[0]);
    };
</script>