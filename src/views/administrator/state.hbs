<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto"><!--mx-auto permite centrar-->
            <div class="card">
                <div class="card-body">
                    <form action="/administrator/state/{{persona.PERSONA_ID}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{persona.PERSONA_NOMBRE}}" name="PERSONA_NOMBRE" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{persona.PERSONA_TELEFONO}}" name="PERSONA_TELEFONO" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{persona.PERSONA_DIRECCION}}" name="PERSONA_DIRECCION" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="email" value="{{persona.PERSONA_EMAIL}}" name="PERSONA_EMAIL" class="form-control">
                        </div>

                        <div class="form-group">
                            <input type="text" value="{{persona.PERSONA_ESTADO}}" name="PERSONA_ESTADO" class="form-control" autofocus>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>                            
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>